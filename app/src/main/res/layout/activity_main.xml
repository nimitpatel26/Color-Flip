<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbpapplications.colorflip.Main"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/app_name"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="65sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_main_play"
            style="@style/main_buttons"
            android:text="@string/main_play"
            tools:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_main_settings"
            style="@style/main_buttons"
            android:text="@string/main_settings" />

        <Button
            android:id="@+id/button_main_about"
            style="@style/main_buttons"
            android:text="@string/main_about" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
