<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbpapplications.colorflip.Result"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <Button
                android:id="@+id/button_result_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_arrow_back_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_space"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="60dp"

            android:gravity="end"
            android:orientation="horizontal"
            android:layout_height="60dp">

            <Button
                android:id="@+id/button_result_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_refresh_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_result_conclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="70sp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/button_result_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_arrow_forward_black_24dp" />

    </LinearLayout>

</LinearLayout>